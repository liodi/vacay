<div class="login">
    <h1>Sign Up!</h1>
    <%= form_for @user do |f| %>
        <div class="signin_input">
        First
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="signin_input">
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
        <div class="signin_input">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <div class="signin_input">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </div>
        <div class="signin_input">
            <%= f.submit %>
        </div>
        <div class="signin_input">
            <a href="/"><button>or sign in to your account!</button></a>
        </div>
    <% end %>
</div>