<%- if logged_in? -%>
    <p>Welcome <%= current_user.name %> (<%= current_user.email %>)</p>
    <p><%= link_to 'Log Out', logout_path %></p>

    <% @indexWords.each do |word| %>
        <div class="index_word">
            <a href="main/<%= word.downcase %>"><%= word %></a>
        </div>
    <% end %>
<%- else -%>
    <p><%= link_to 'Sign Upp', signup_path %></p>
    <p><%= link_to 'Log In', login_path %></p>
<%- end -%>